<nav class="navbar navbar-light bg-light " style="margin-left: 30px; margin-right: 30px;">
  <form class="form-inline" action="/timkiem" method="POST">
    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="searchKey"
      id="searchKey">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
  </form>
</nav>

<div class="container-fluid">
  <!-- khối này sẽ có 2 column với width bằng nhau và = 50% -->
  <div class="row">
    <div class="col">
      <div class="container">
        <table class="table table-bordered">
          <tbody>
            {{#each list}}
            <tr>
              <td><img src="{{this.hinhanh}}" height="100px" width="100px"></td>
              <td>
                <p>{{this.tensp}} </p>
                <p>Thương hiệu: {{this.thuonghieu}}</p>
                <p>Giá: {{this.giaxuat}}</p>
              </td>
              <td>
                <p>Mã: {{this.masp}}</p>
                <p>Số lượng: {{this.soluong}}</p>
                <a href="/addthanhtoan?add={{this._id}}">
                  <button type="button" class="btn btn-primary">

                    Thêm

                  </button>
                </a>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
    <div class="col">
      <div class="container">
        {{#if bill}}
        <table class="table table-bordered">
          <tbody>
            {{#each bill}}
            <tr>
              <td><img src="{{this.hinhanh}}" height="100px" width="100px"></td>
              <td>
                <p>{{this.tensp}}</p>
                <p>Thương hiệu: {{this.thuonghieu}}</p>
                <p>Giá: {{this.giaxuat}}VND</p>
              </td>
              <td>
                <p>Mã: {{this.masp}}</p>
                <p>Số lượng: <a href="/giam?id={{this._id}}"><i class="fas fa-angle-down"></i></a> {{this.soluong}}<a
                    href="/tang?id={{this._id}}"><i class="fas fa-angle-up" style="margin-left: 5px;"></i></a></p>
                <a href="/xoa1?id={{this._id}}">
                  <button type="button" class="btn btn-primary">
                    Xoá
                  </button>
                </a>
              </td>
            </tr>
            {{/each}}
            <tr>
              <td>
                <form action="/thanhtoan" method="POST">
                  <input type="text" class="form-control d-block" name="magiamgia" placeholder="Mã giảm giá" />
                </form>
              </td>
              <td colspan="2">
                Giảm:{{giam}} %
              </td>
            </tr>
            
            <tr>
              <td>
                <p>Thuế VAT: 10%</p>
              </td>
              <td colspan="2">
                <p>Tổng tiền: {{gia}} VND</p>
              </td>
            </tr>


          </tbody>
        </table>

        <div class="row">
          <div class="col"></div>
          <div class="col"></div>
          <div class="col"></div>
          <div class="col"></div>
          <div class="col"></div>
          <div class="col"></div>
          <div class="col">

            <a href="/xoabill">
              <button type="button" class="btn btn-primary">
                Xoá hết
              </button>
            </a>
          </div>
          <div class="col">
           <a href="/checkout">
              <button type="button" class="btn btn-primary">
                Thanh toán
              </button>
            </a>
          </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>