<div class="container">
    <h2>Cập nhật thông tin</h2>
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-3">
                </div>
                <div class="col-6">
                        <form action="" method="POST">
                            <div class="form-group">
                                <input id="_id" name="_id" value="{{user._id}}" hidden></input>
                            </div>
                            <div class="form-group">
                                <label for="hovaten">Họ và tên</label> 
                                <input class="form-control" id="hovaten" name="hovaten" value="{{user.name}}">
                            </div>
                            
                            <div class="form-group">
                                <label for="sodth">Số điện thoại</label> 
                                <input class="form-control" id="sodth" name="sodth" value="{{user.phone}}">
                            </div>
                            <div class="form-group">
                                <label for="sex">Giới tính</label> 
                                <div class="form-group" style="margin-left: 30px;">
                                    {{#if user.gender}}
                                        <input id="nam" type="radio" name="sex" value="true" checked="checked">
                                        <label for="nam">Nam </label>
                                        <input id="nu" type="radio" name="sex" value="false" >
                                        <label for="nu">Nữ </label>
                                        {{else}}
                                        <input id="nam" type="radio" name="sex" value="true" >
                                        <label for="nam">Nam </label>
                                        <input id="nu" type="radio" name="sex" value="false" checked="checked">
                                        <label for="nu">Nữ </label> <br>
                                        {{/if}}
                                </div>
                            </div>
                            <div class="form-group" style="margin-top: 10px;">
                                <label for="ngaysinh">Ngày sinh</label> 
                                <input class="form-control" id="ngaysinh" name="ngaysinh" type="text" value="{{user.birth}}" >
                            </div>

                            <div class="form-group">
                                {{#each errors}}
                                <span style="color: red;">
                                {{this.msg}}
                                </span><br>
                                {{/each}}
                            </div>
                            
                            <div class="row">
                                <div class="col-8">
                                </div>
                                <div class="col-2">
                                    <a href="" style="margin-left: 20px;">
                                        <button type="button" class="btn btn-danger">
                                            Hủy
                                        </button>
                                    </a>
                                </div>
                                <div class="col-2">
                                    <a href="">
                                        <button class="btn btn-primary" type="submit" value="submit" class="btn_3">
                                            Cập nhật
                                        </button>
                                    </a>
                                </div>
                            </div>
                        </form>
                </div>
                <div class="col-3"></div>
            </div>
        </div>
    </div>
</div>

